<% if current_user %>         <!-- .present??-->
  <h4>Add a comment:</h4>
  <%= form_for [topic, post, comment] do |f| %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment" %>
  </br>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>
