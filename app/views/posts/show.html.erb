<h1><%= @post.title %></h1>
<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

<div class="row">
  <% if @summary == nil %>
    <div class="col-md-4">
        <%= link_to "Create Summary", new_topic_post_summary_path(@topic, @post), class: 'btn btn-success' %>
    </div>
  <% else %>
    <h3>Summary</h3>
    <div class="col-md-4">
      <p><%= @summary.body %></p>
    </div>
  <% end %>
</div>

